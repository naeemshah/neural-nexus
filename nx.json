{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    }
  },
  "projects": {
    "crypto": {
      "root": "crypto",
      "projectType": "library",
      "targets": {
        "test": {
          "executor": "nx:run-commands",
          "options": {
            "command": "forge test",
            "cwd": "crypto"
          }
        }
      }
    },
    "website": {
      "root": "website",
      "projectType": "application"
    }
  }
}
